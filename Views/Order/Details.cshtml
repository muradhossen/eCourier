@model eCourier.Dto.OrderDto
@inject eCourier.Helper.OrderStatus _orderStatus

@{
    ViewData["Title"] = "Details";
    bool isInAdminRole = User.IsInRole("Admin");

    var status = _orderStatus.GetStatusByValue(Model.Status);
    
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <h3>Sender Info :</h3>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUserUserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUserEmail)
        </dd>
    </dl>

    <h3>Recipient Info :</h3>
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipient.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipient.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipient.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipient.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipient.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipient.Phone)
        </dd>

    </dl>


    <h3>Order Info :</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlaceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaceDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReachDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReachDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @status
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueAmount)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaidAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaidAmount)
        </dd>

        @foreach (var product in Model.Products)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(model => product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Description)
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(model => product.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Height)
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(model => product.Height)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Width)
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(model => product.Width)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Weight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => product.Weight)

            </dd>
        }

    </dl>

</div>
<div>
    @if (isInAdminRole)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <span>|</span>

    }
    <a asp-action="Index">Back to List</a>
</div>
